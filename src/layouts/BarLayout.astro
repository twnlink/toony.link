---
  import { ClientRouter } from 'astro:transitions';

  let { description } = Astro.props;

  if (!description) description = "hi, i'm toonlink."
---

<html transition:name="root" transition:animate="none" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="toonlink, toonlink zelda" />
    <link
      href="data:image/x-icon;base64,"
      rel="icon"
      type="image/x-icon"
    />
    <title>toonlink</title>

    <!-- some open graph stuff so it embeds nicely -->
    <meta property="og:image" content="/img/triforce.png" />
    <meta name="theme-color" content="#86EFAC" />
    <meta name="description" content="hi, i'm toonlink." />
    <ClientRouter  />
  </head>
  <body>
    <div
      class="top-border border-t-8 h-full w-full bg-dark text-white  font-mono"
    >
      <slot />
    </div>
    <style>
      :global(html, body) {
        @apply bg-dark;
        width: 100%;
        height: 100%;
      }
      .top-border {
        @apply border-green-300;
      }
    </style>
  </body>
</html>
